<%- include("./partials/header") %>

<nav class="navbar bg-light">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">ToDo App</a>
  </div>
</nav>

<div class="container mt-5">
  <form action="/add/todo" method="post" class="d-flex">
    <input
      type="text"
      name="todo"
      class="form-control"
      placeholder="Enter Todo"
    />
    <input type="submit" value="Add Todo" class="btn btn-md btn-primary mx-2" />
  </form>

  <ul class="list-group mt-5">
    <% todo.forEach(todos =>{ %>
    <li class="list-group-item"><%= todos.todo %><a href="/delete/todo/<%= todo._id%>" class="btn btn-danger btn-sm">Delete</a></li>
    
    <% }) %>
    
  </ul>
</div>

<%- include("./partials/footer") %>
